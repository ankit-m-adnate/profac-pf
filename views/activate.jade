extends layout

block content
  .main.container
    .row(style="margin-top:5%")
      .col-md-6.col-md-offset-3.thumbnail
        div.col-md-12.text-center
          img(src='/img/gear.png' alt='Process Factory')
        

        // register form
        div.caption
          h3.display-4.m-b-2 Set up a password
          form(method='POST')
            div.form-group
              label(for='pw') Password:
              input#pw.form-control(type='password' name='password')
            div.form-group
              label(for='pw2') Confirm Password:
              input#pw2.form-control(type='password' name='confirmPassword')
            button.btn.btn-primary(type='submit') Confirm